<Application x:Class="DotaHeroPickerUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:v="clr-namespace:DotaHeroPickerUI.View"
             xmlns:vm="clr-namespace:DotaHeroPickerUI.ViewModel">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/DataResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:HeroesPickViewModel}">
                <v:HeroesPickView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ResultAdvantageEnemiesViewModel}">
                <v:ResultAdvantageEnemiesView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ResultAdvantageAlliesViewModel}">
                <v:ResultAdvantageAlliesView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <v:SettingsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:HeroGuridsViewModel}">
                <v:HeroGuidsView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
